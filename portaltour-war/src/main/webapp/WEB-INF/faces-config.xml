<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<application>
		<!-- Configura o locale (i18n) pt-BR para toda aplicacao. -->
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>

		<!-- Define o nome do arquivo com as labels e mensagens. Note que 'msg' 
			eh a variavel usada nas telas pra recuperar as labels/mensagens. -->
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<!-- Configura o PhaseListener utilizado para forcar a serializacao da sessao 
		no App Engine. -->
	<lifecycle>
		<phase-listener>br.com.battista.web.config.SessionPhaseListener</phase-listener>
	</lifecycle>
</faces-config>
